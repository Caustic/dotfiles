[user]
	name = Alan Braithwaite
	email = abraithwaite@mail.csuchico.edu
[color]
    branch = auto
    diff = auto
    status = auto
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = magenta bold
    frag = cyan bold
    old = red
    new = green
[color "status"]
    added = green
    changed = yellow
    untracked = cyan
[alias]
	in = log ..@{u}
	out = log @{u}..
    a = add
    c = commit
    d = diff
    l = log
    ls = log --pretty=format:'%C(cyan)%h%Creset %s %Cgreen%d%Creset'
    s = status -sb
    st = status

