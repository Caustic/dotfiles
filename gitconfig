[user]
	name = Alan Braithwaite
	email = alan.braithwaite@cyaninc.com

[color]
    branch = auto
    diff = auto
    status = auto
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = magenta bold
    frag = cyan bold
    old = red
    new = green

[color "status"]
    added = green
    changed = yellow
    untracked = cyan

[alias]
	in = log ..@{u}
	out = log @{u}..
    a = add
    c = commit
    d = diff
    f = fetch
    l = log
    ls = log --pretty=format:'%C(magenta)%h%Creset %C(yellow)%aN%Creset %C(green)%aE%Creset %C(dim)%ci%Creset\n %s %C(cyan)%d%Creset'
    m = merge
    s = status -sb
    st = status
    co = checkout

[merge]
	tool = vimdiff

[core]
	editor = vim

[init]
	templatedir = ~/.git_template

[annex]
	alwayscommit = false
